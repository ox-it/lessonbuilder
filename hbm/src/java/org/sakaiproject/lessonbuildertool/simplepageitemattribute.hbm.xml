<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>

   <!-- put your value object in the class name, 
      the table name is optional but you should specify it to avoid collisions -->
   <class name="org.sakaiproject.lessonbuildertool.SimplePageItemAttributeImpl" table="lesson_builder_item_attributes">

       <cache usage="nonstrict-read-write" />

      <!-- create the primary key id, using native is typically the best way -->

      <id name="id" type="long">
         <generator class="native"/>
      </id>

	<many-to-one name="itemId" class="org.sakaiproject.lessonbuildertool.SimplePageItemImpl" not-null="true" />

	<property name="attr" type="string" length="100" />
	<property name="value" type="string" length="250" />
	
   </class>
</hibernate-mapping>
